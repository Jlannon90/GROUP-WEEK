@{
  Layout="Shared/_Layout.cshtml";
}

  <body class="first-question">
    <img class="shadow" src="/@Model["shadow"].GetImg()" alt="@Model["shadow"].GetShadowName()">
    <h2 class="name first-letter-red">@Model["shadow"].GetShadowName()</h2>
    <div class="speech">
      <h3 class="intro">@Model["shadow"].GetIntro()</h3>
      <h4 class="question">@Model["question"].GetQuestionName()</h4>
    </div>
    <form action="/first_question/result/@Model["shadow"].GetId()" method="post">
        @foreach(var answer in @Model["answers"])
        {
          @if(answer.GetAnswerType() == "gloomy")
          {
            <div class="radio gloomy">
              <label>
                <input class="@Model["answers"].GetType()" type="radio" name="answer-id" value="@answer.GetId()">@answer.GetAnswerName()
              </label>
            </div>
          }
          @if(answer.GetAnswerType() == "timid")
          {
            <div class="radio timid">
              <label>
                <input class="@Model["answers"].GetType()" type="radio" name="answer-id" value="@answer.GetId()">@answer.GetAnswerName()
              </label>
            </div>
          }
          @if(answer.GetAnswerType() == "irritable")
          {
            <div class="radio irritable">
              <label>
                <input class="@Model["answers"].GetType()" type="radio" name="answer-id" value="@answer.GetId()">@answer.GetAnswerName()
              </label>
            </div>
          }
          @if(answer.GetAnswerType() == "upbeat")
          {
            <div class="radio upbeat">
              <label>
                <input class="@Model["answers"].GetType()" type="radio" name="answer-id" value="@answer.GetId()">@answer.GetAnswerName()
              </label>
            </div>
          }
        }
      <input type="hidden" name="shadow-id" value="@Model["shadow"].GetId()">
      <input type="hidden" name="question-id" value="@Model["question"].GetId()">
      <button id="reply" type="submit" name="button">ReP<span class="inverse">L</span>y</button>
    </form>
    <audio src="../Content/music/layer-cake.mp3" autoplay>
    <embed src="../Content/music/layer-cake.mp3" width="180" height="90" hidden="true" />
    </audio>
  </body>
