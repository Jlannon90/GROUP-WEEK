@{
  Layout="Shared/_Layout.cshtml";
}

  <body class="second-question">
    <img class="shadow" src="/ask/@Model["shadow"].GetImg()" alt="@Model["shadow"].GetShadowName()">
    <h2 class="name first-letter-red">@Model["shadow"].GetShadowName()</h2>
    <div class="speech">
      <h3 class="intro">@Model["shadow"].GetIntro()</h3>
      <h4 class="question">@Model["question"].GetQuestionName()</h4>
    </div>
    <form action="/second_question/result/@Model["shadow"].GetId()" method="post">
      @for(int i = 0; i < 3; i ++)
      {
        @if (i == 2)
        {
          @if(@Model["answers"][2].GetAnswerType() == "gloomy")
          {
            <div class="radio gloomy">
              <label>
                <input class="@Model["answers"][2].GetType()" type="radio" name="answer-id" value="@Model["answers"][2].GetId()" checked>@Model["answers"][2].GetAnswerName()
              </label>
            </div>
          }
          @if(@Model["answers"][2].GetAnswerType() == "timid")
          {
            <div class="radio timid">
              <label>
                <input class="@Model["answers"][2].GetType()" type="radio" name="answer-id" value="@Model["answers"][2].GetId()" checked>@Model["answers"][2].GetAnswerName()
              </label>
            </div>
          }
          @if(@Model["answers"][2].GetAnswerType() == "irritable")
          {
            <div class="radio irritable">
              <label>
                <input class="@Model["answers"][2].GetType()" type="radio" name="answer-id" value="@Model["answers"][2].GetId()" checked>@Model["answers"][2].GetAnswerName()
              </label>
            </div>
          }
          @if(@Model["answers"][2].GetAnswerType() == "upbeat")
          {
            <div class="radio upbeat">
              <label>
                <input class="@Model["answers"][2].GetType()" type="radio" name="answer-id" value="@Model["answers"][2].GetId()" checked>@Model["answers"][2].GetAnswerName()
              </label>
            </div>
          }
        }
        else
        {
          @if(@Model["answers"][i].GetAnswerType() == "gloomy")
          {
            <div class="radio gloomy">
              <label>
                <input class="@Model["answers"][i].GetType()" type="radio" name="answer-id" value="@Model["answers"][i].GetId()">@Model["answers"][i].GetAnswerName()
              </label>
            </div>
          }
          @if(@Model["answers"][i].GetAnswerType() == "timid")
          {
            <div class="radio timid">
              <label>
                <input class="@Model["answers"][i].GetType()" type="radio" name="answer-id" value="@Model["answers"][i].GetId()">@Model["answers"][i].GetAnswerName()
              </label>
            </div>
          }
          @if(@Model["answers"][i].GetAnswerType() == "irritable")
          {
            <div class="radio irritable">
              <label>
                <input class="@Model["answers"][i].GetType()" type="radio" name="answer-id" value="@Model["answers"][i].GetId()">@Model["answers"][i].GetAnswerName()
              </label>
            </div>
          }
          @if(@Model["answers"][i].GetAnswerType() == "upbeat")
          {
            <div class="radio upbeat">
              <label>
                <input class="@Model["answers"][i].GetType()" type="radio" name="answer-id" value="@Model["answers"][i].GetId()">@Model["answers"][i].GetAnswerName()
              </label>
            </div>
          }
        }
      }
      <button id="reply" type="submit" name="button">ReP<span class="inverse">L</span>y</button>
    </form>
    <audio src="../Content/music/layer-cake.mp3" autoplay>
    <embed src="../Content/music/layer-cake.mp3" width="180" height="90" hidden="true" />
    </audio>
  </body>
